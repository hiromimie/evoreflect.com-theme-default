{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v2.json",
  "name": "default",
  "version": "2.5.0",
  "author": "EvoReflect Team",
  "description": "Default GUI theme with light/dark mode and responsive design support (Issue #7, #716, #725, #1131)",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "colors": {
        "background": {
          "primary": "#111827",
          "secondary": "#1F2937",
          "tertiary": "#374151"
        },
        "foreground": {
          "primary": "#E5E7EB",
          "secondary": "#D1D5DB",
          "muted": "#6B7280"
        },
        "accent": {
          "primary": "#60A5FA",
          "secondary": "#A78BFA"
        },
        "semantic": {
          "success": "#34D399",
          "error": "#F87171",
          "warning": "#FBBF24",
          "info": "#60A5FA"
        },
        "border": "#374151"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton"
      }
    },
    "light": {
      "colors": {
        "background": {
          "primary": "#F5F5F7",
          "secondary": "#FFFFFF",
          "tertiary": "#E5E7EB"
        },
        "foreground": {
          "primary": "#1F2933",
          "secondary": "#3E4C59",
          "muted": "#7B8794"
        },
        "accent": {
          "primary": "#2563EB",
          "secondary": "#7C3AED"
        },
        "semantic": {
          "success": "#059669",
          "error": "#DC2626",
          "warning": "#D97706",
          "info": "#2563EB"
        },
        "border": "#D1D5DB"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton"
      }
    }
  }
}
