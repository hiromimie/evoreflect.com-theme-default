{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v2.json",
  "name": "default",
  "version": "2.4.0",
  "author": "EvoReflect Team",
  "description": "Default GUI theme with light/dark mode and responsive design support (Issue #7, #716, #725)",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "colors": {
        "background": {
          "primary": "#282a36",
          "secondary": "#44475a",
          "tertiary": "#6272a4"
        },
        "foreground": {
          "primary": "#f8f8f2",
          "secondary": "#e0e0e0",
          "muted": "#6272a4"
        },
        "accent": {
          "primary": "#bd93f9",
          "secondary": "#ff79c6"
        },
        "semantic": {
          "success": "#50fa7b",
          "error": "#ff5555",
          "warning": "#ffb86c",
          "info": "#8be9fd"
        },
        "border": "#44475a"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton",
        "customizations": {
          "--color-primary-500": "#bd93f9",
          "--color-secondary-500": "#ff79c6"
        }
      }
    },
    "light": {
      "colors": {
        "background": {
          "primary": "#fdf6e3",
          "secondary": "#eee8d5",
          "tertiary": "#e8e2d9"
        },
        "foreground": {
          "primary": "#657b83",
          "secondary": "#586e75",
          "muted": "#839496"
        },
        "accent": {
          "primary": "#cb4b16",
          "secondary": "#d33682"
        },
        "semantic": {
          "success": "#859900",
          "error": "#dc322f",
          "warning": "#b58900",
          "info": "#268bd2"
        },
        "border": "#d3cbc2"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "modern",
        "customizations": {
          "--color-primary-50": "#fff5eb",
          "--color-primary-100": "#ffe6d0",
          "--color-primary-200": "#ffc9a1",
          "--color-primary-300": "#ffa060",
          "--color-primary-400": "#e87830",
          "--color-primary-500": "#cb4b16",
          "--color-primary-600": "#a33c12",
          "--color-primary-700": "#7c2e0e",
          "--color-primary-800": "#541f09",
          "--color-primary-900": "#2d1105",
          "--color-secondary-50": "#fdf2f7",
          "--color-secondary-100": "#fbe4ef",
          "--color-secondary-200": "#f7c4dd",
          "--color-secondary-300": "#f09dc5",
          "--color-secondary-400": "#e66ba6",
          "--color-secondary-500": "#d33682",
          "--color-secondary-600": "#aa2b68",
          "--color-secondary-700": "#80204e",
          "--color-secondary-800": "#561634",
          "--color-secondary-900": "#2d0b1a",
          "--color-surface-50": "#fdf6e3",
          "--color-surface-100": "#f5efd6",
          "--color-surface-200": "#eee8d5",
          "--color-surface-300": "#e8e2cf",
          "--color-surface-400": "#ddd6c4",
          "--color-surface-500": "#d3cbc2",
          "--color-surface-600": "#b8ad9e",
          "--color-surface-700": "#9a9081",
          "--color-surface-800": "#7c7365",
          "--color-surface-900": "#5e564a"
        }
      }
    }
  }
}