{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v2.json",
  "name": "default",
  "version": "2.4.0",
  "author": "EvoReflect Team",
  "description": "Default GUI theme with light/dark mode and responsive design support (Issue #7, #716, #725)",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "colors": {
        "background": {
          "primary": "#282a36",
          "secondary": "#44475a",
          "tertiary": "#6272a4"
        },
        "foreground": {
          "primary": "#f8f8f2",
          "secondary": "#e0e0e0",
          "muted": "#6272a4"
        },
        "accent": {
          "primary": "#bd93f9",
          "secondary": "#ff79c6"
        },
        "semantic": {
          "success": "#50fa7b",
          "error": "#ff5555",
          "warning": "#ffb86c",
          "info": "#8be9fd"
        },
        "border": "#44475a"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "skeleton",
        "customizations": {
          "--color-primary-500": "#bd93f9",
          "--color-secondary-500": "#ff79c6"
        }
      }
    },
    "light": {
      "colors": {
        "background": {
          "primary": "#FFF8F0",
          "secondary": "#FFF0E0",
          "tertiary": "#FFE5CC"
        },
        "foreground": {
          "primary": "#3D2914",
          "secondary": "#5A3D24",
          "muted": "#6B5344"
        },
        "accent": {
          "primary": "#E67E22",
          "secondary": "#C0392B"
        },
        "semantic": {
          "success": "#27AE60",
          "error": "#C0392B",
          "warning": "#F39C12",
          "info": "#D35400"
        },
        "border": "#E8DDD0"
      },
      "typography": {
        "fontFamily": "Inter, Noto Sans JP, sans-serif",
        "fontFamilyMono": "JetBrains Mono, monospace",
        "fontSize": {
          "xs": "11px",
          "sm": "12px",
          "base": "14px",
          "lg": "16px",
          "xl": "18px"
        },
        "lineHeight": "1.6"
      },
      "layout": {
        "sidebar": {
          "width": "280px",
          "position": "left",
          "collapsible": true
        },
        "chat": {
          "maxWidth": "800px",
          "bubbleStyle": "rounded",
          "avatarSize": "48px"
        },
        "borderRadius": {
          "sm": "4px",
          "md": "8px",
          "lg": "16px"
        },
        "breakpoints": {
          "mobile": "768px",
          "tablet": "1024px",
          "desktop": "1440px"
        },
        "responsive": true
      },
      "assets": {
        "logo": {
          "path": "assets/logo.svg",
          "width": "120px"
        }
      },
      "avatar": {
        "user": {
          "path": "avatar/user.svg",
          "fallback": "default"
        },
        "assistant": {
          "path": "avatar/assistant.svg",
          "fallback": "default"
        }
      },
      "skeleton": {
        "preset": "evoreflect-light",
        "customizations": {}
      }
    }
  }
}