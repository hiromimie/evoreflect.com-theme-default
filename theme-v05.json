{
  "$schema": "https://evoreflect.com/schemas/gui-theme-v0.5.json",
  "name": "default",
  "version": "0.5.0",
  "author": "EvoReflect Team",
  "description": "EvoReflect default theme v0.5.0 with token-based customization (Issue #760)",
  "license": "MIT",
  "default_mode": "dark",
  "type": "hybrid",
  "category": "dark",
  "globals": {
    "fontFamily": {
      "sans": "Inter, Noto Sans JP, system-ui, sans-serif",
      "mono": "JetBrains Mono, Consolas, monospace"
    }
  },
  "modes": {
    "dark": {
      "globals": {
        "fontFamily": {
          "sans": "Inter, Noto Sans JP, system-ui, sans-serif",
          "mono": "JetBrains Mono, Consolas, monospace"
        }
      },
      "tokens": {
        "colors": {
          "surface": {
            "50": "#fafafa",
            "100": "#f4f4f5",
            "200": "#e4e4e7",
            "300": "#d4d4d8",
            "400": "#a1a1aa",
            "500": "#71717a",
            "600": "#52525b",
            "700": "#3f3f46",
            "800": "#27272a",
            "900": "#18181b",
            "950": "#09090b"
          },
          "primary": {
            "50": "#faf5ff",
            "100": "#f3e8ff",
            "200": "#e9d5ff",
            "300": "#d8b4fe",
            "400": "#c084fc",
            "500": "#bd93f9",
            "600": "#a855f7",
            "700": "#9333ea",
            "800": "#7e22ce",
            "900": "#581c87"
          },
          "secondary": {
            "500": "#8be9fd",
            "600": "#67e8f9"
          },
          "accent": {
            "500": "#ff79c6",
            "600": "#f472b6"
          },
          "success": {
            "500": "#50fa7b",
            "600": "#22c55e"
          },
          "warning": {
            "500": "#ffb86c",
            "600": "#f97316"
          },
          "error": {
            "500": "#ff5555",
            "600": "#ef4444"
          },
          "info": {
            "500": "#8be9fd",
            "600": "#06b6d4"
          },
          "cli": {
            "primary": "#bd93f9",
            "secondary": "#8be9fd",
            "accent": "#ff79c6",
            "background": "#282a36",
            "foreground": "#f8f8f2",
            "success": "#50fa7b",
            "error": "#ff5555",
            "warning": "#ffb86c",
            "info": "#8be9fd",
            "border": "#6272a4",
            "muted": "#6272a4",
            "highlight": "#44475a"
          },
          "agent": {
            "reactive": "#50fa7b",
            "deliberative": "#8be9fd",
            "metacognitive": "#bd93f9"
          },
          "reasoning": {
            "thought": "#f1fa8c",
            "action": "#50fa7b",
            "observation": "#8be9fd"
          }
        },
        "semantic": {
          "background": {
            "app": "{colors.surface.900}",
            "card": "{colors.surface.800}",
            "sidebar": "{colors.surface.800}",
            "header": "{colors.surface.800}",
            "footer": "{colors.surface.800}",
            "input": "{colors.surface.700}",
            "hover": "{colors.surface.700}",
            "active": "{colors.surface.600}",
            "selected": "{colors.primary.900}",
            "muted": "{colors.surface.950}"
          },
          "foreground": {
            "primary": "{colors.surface.50}",
            "secondary": "{colors.surface.300}",
            "muted": "{colors.surface.400}",
            "inverted": "{colors.surface.900}",
            "link": "{colors.primary.400}",
            "linkHover": "{colors.primary.300}",
            "success": "{colors.success.500}",
            "warning": "{colors.warning.500}",
            "error": "{colors.error.500}",
            "info": "{colors.info.500}"
          },
          "border": {
            "default": "{colors.surface.700}",
            "subtle": "{colors.surface.800}",
            "strong": "{colors.surface.600}",
            "focus": "{colors.primary.500}"
          }
        },
        "typography": {
          "fontSize": {
            "xs": "0.6875rem",
            "sm": "0.75rem",
            "base": "0.875rem",
            "lg": "1rem",
            "xl": "1.125rem",
            "2xl": "1.5rem",
            "3xl": "1.875rem"
          },
          "fontWeight": {
            "light": 300,
            "normal": 400,
            "medium": 500,
            "semibold": 600,
            "bold": 700
          },
          "lineHeight": {
            "none": 1,
            "tight": 1.25,
            "snug": 1.375,
            "normal": 1.5,
            "relaxed": 1.625,
            "loose": 2
          }
        },
        "spacing": {
          "0": "0",
          "1": "0.25rem",
          "2": "0.5rem",
          "3": "0.75rem",
          "4": "1rem",
          "5": "1.25rem",
          "6": "1.5rem",
          "8": "2rem",
          "10": "2.5rem",
          "12": "3rem",
          "16": "4rem"
        },
        "borderRadius": {
          "none": "0",
          "sm": "0.25rem",
          "default": "0.375rem",
          "md": "0.5rem",
          "lg": "0.75rem",
          "xl": "1rem",
          "full": "9999px"
        },
        "shadows": {
          "none": "none",
          "sm": "0 1px 2px 0 rgb(0 0 0 / 0.05)",
          "default": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
          "md": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
          "lg": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)",
          "xl": "0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1)"
        }
      },
      "regions": {
        "header": {
          "visible": true,
          "height": "64px",
          "background": "{semantic.background.header}",
          "borderRadius": "0"
        },
        "footer": {
          "visible": true,
          "height": "32px",
          "background": "{semantic.background.footer}"
        },
        "sidebarLeft": {
          "visible": true,
          "width": "280px",
          "minWidth": "200px",
          "maxWidth": "400px",
          "background": "{semantic.background.sidebar}"
        },
        "sidebarRight": {
          "visible": false,
          "width": "280px"
        },
        "main": {
          "flex": "1",
          "overflow": "auto"
        },
        "chatArea": {
          "maxWidth": "800px",
          "padding": "1rem"
        },
        "toolsPanel": {
          "visible": true,
          "width": "320px"
        }
      },
      "components": {
        "button": {
          "base": {
            "padding": "0.5rem 1rem",
            "borderRadius": "{borderRadius.default}",
            "fontWeight": "500",
            "transition": "all 0.2s"
          },
          "variants": {
            "primary": {
              "background": "{colors.primary.500}",
              "color": "white"
            },
            "secondary": {
              "background": "{colors.surface.700}",
              "color": "{colors.surface.100}"
            },
            "danger": {
              "background": "{colors.error.500}",
              "color": "white"
            }
          },
          "states": {
            "hover": {
              "opacity": 0.9
            },
            "disabled": {
              "opacity": 0.5,
              "cursor": "not-allowed"
            }
          }
        },
        "input": {
          "base": {
            "padding": "0.5rem 0.75rem",
            "background": "{semantic.background.input}",
            "borderRadius": "{borderRadius.default}",
            "border": "1px solid {semantic.border.default}",
            "color": "{semantic.foreground.primary}"
          },
          "states": {
            "focus": {
              "borderColor": "{semantic.border.focus}"
            }
          }
        },
        "card": {
          "base": {
            "background": "{semantic.background.card}",
            "borderRadius": "{borderRadius.lg}",
            "border": "1px solid {semantic.border.default}",
            "padding": "1rem"
          }
        },
        "chatBubble": {
          "base": {
            "borderRadius": "{borderRadius.lg}",
            "padding": "0.75rem 1rem"
          },
          "variants": {
            "user": {
              "background": "{colors.primary.900}",
              "color": "{colors.primary.100}"
            },
            "assistant": {
              "background": "{colors.surface.800}",
              "color": "{semantic.foreground.primary}"
            }
          }
        },
        "codeBlock": {
          "base": {
            "fontFamily": "var(--font-mono)",
            "fontSize": "{typography.fontSize.sm}",
            "background": "{colors.surface.950}",
            "borderRadius": "{borderRadius.md}",
            "padding": "1rem"
          }
        }
      },
      "animations": {
        "fadeIn": {
          "duration": "0.2s",
          "timingFunction": "ease-out",
          "keyframes": {
            "from": {
              "opacity": 0
            },
            "to": {
              "opacity": 1
            }
          }
        },
        "slideIn": {
          "duration": "0.3s",
          "timingFunction": "ease-out",
          "keyframes": {
            "from": {
              "transform": "translateY(-10px)",
              "opacity": 0
            },
            "to": {
              "transform": "translateY(0)",
              "opacity": 1
            }
          }
        }
      },
      "responsive": {
        "md": {
          "sidebarLeft": {
            "width": "240px"
          }
        },
        "sm": {
          "sidebarLeft": {
            "visible": false
          }
        }
      }
    },
    "light": {
      "tokens": {
        "colors": {
          "surface": {
            "50": "#18181b",
            "100": "#27272a",
            "200": "#3f3f46",
            "300": "#52525b",
            "400": "#71717a",
            "500": "#a1a1aa",
            "600": "#d4d4d8",
            "700": "#e4e4e7",
            "800": "#f4f4f5",
            "900": "#fafafa",
            "950": "#ffffff"
          },
          "primary": {
            "500": "#E67E22",
            "600": "#D35400"
          },
          "secondary": {
            "500": "#C0392B",
            "600": "#A93226"
          },
          "cli": {
            "primary": "#268bd2",
            "secondary": "#2aa198",
            "accent": "#d33682",
            "background": "#fdf6e3",
            "foreground": "#657b83",
            "success": "#859900",
            "error": "#dc322f",
            "warning": "#b58900",
            "info": "#268bd2",
            "border": "#eee8d5",
            "muted": "#93a1a1",
            "highlight": "#eee8d5"
          }
        },
        "semantic": {
          "background": {
            "app": "{colors.surface.900}",
            "card": "{colors.surface.800}",
            "sidebar": "{colors.surface.800}",
            "header": "{colors.surface.800}",
            "footer": "{colors.surface.800}",
            "input": "{colors.surface.700}",
            "hover": "{colors.surface.600}"
          },
          "foreground": {
            "primary": "{colors.surface.50}",
            "secondary": "{colors.surface.200}",
            "muted": "{colors.surface.400}"
          },
          "border": {
            "default": "{colors.surface.600}",
            "subtle": "{colors.surface.700}",
            "strong": "{colors.surface.500}"
          }
        }
      }
    }
  }
}
