{
  "$schema": "https://evoreflect.com/schemas/cli-theme-v2.json",
  "name": "default",
  "version": "2.1.0",
  "author": "EvoReflect Team",
  "description": "EvoReflect default theme with light/dark mode support (Issue #717, #725)",
  "type": "hybrid",
  "default_mode": "dark",
  "gui_theme": "gui-theme.json",
  "modes": {
    "light": {
      "color_scheme": {
        "primary": "#D35400",
        "secondary": "#E67E22",
        "accent": "#C0392B",
        "background": "#FFF8F0",
        "foreground": "#3D2914",
        "success": "#27AE60",
        "error": "#C0392B",
        "warning": "#F39C12",
        "info": "#D35400",
        "border": "#E8DDD0",
        "muted": "#6B5344",
        "highlight": "#FFE5CC",
        "agent_reactive": "#27AE60",
        "agent_deliberative": "#D35400",
        "agent_metacognitive": "#8E44AD",
        "thought_color": "#F39C12",
        "action_color": "#27AE60",
        "observation_color": "#E67E22"
      },
      "syntax_theme": "gruvbox-light",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    },
    "dark": {
      "color_scheme": {
        "primary": "#bd93f9",
        "secondary": "#8be9fd",
        "accent": "#ff79c6",
        "background": "#282a36",
        "foreground": "#f8f8f2",
        "success": "#50fa7b",
        "error": "#ff5555",
        "warning": "#ffb86c",
        "info": "#8be9fd",
        "border": "#6272a4",
        "muted": "#6272a4",
        "highlight": "#44475a",
        "agent_reactive": "#50fa7b",
        "agent_deliberative": "#8be9fd",
        "agent_metacognitive": "#bd93f9",
        "thought_color": "#f1fa8c",
        "action_color": "#50fa7b",
        "observation_color": "#8be9fd"
      },
      "syntax_theme": "dracula",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    }
  }
}
