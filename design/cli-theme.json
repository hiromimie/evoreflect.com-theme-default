{
  "$schema": "https://evoreflect.com/schemas/template-cli-theme-v1.json",
  "default_mode": "dark",
  "modes": {
    "dark": {
      "color_scheme": {
        "primary": "#60A5FA",
        "secondary": "#A78BFA",
        "accent": "#F472B6",
        "background": "#111827",
        "foreground": "#E5E7EB",
        "success": "#34D399",
        "error": "#F87171",
        "warning": "#FBBF24",
        "info": "#60A5FA",
        "border": "#374151",
        "muted": "#6B7280",
        "highlight": "#1F2937",
        "agent_reactive": "#34D399",
        "agent_deliberative": "#60A5FA",
        "agent_metacognitive": "#A78BFA",
        "thought_color": "#FBBF24",
        "action_color": "#34D399",
        "observation_color": "#60A5FA"
      },
      "syntax_theme": "dracula",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    },
    "light": {
      "color_scheme": {
        "primary": "#2563EB",
        "secondary": "#7C3AED",
        "accent": "#DB2777",
        "background": "#F5F5F7",
        "foreground": "#1F2933",
        "success": "#059669",
        "error": "#DC2626",
        "warning": "#D97706",
        "info": "#2563EB",
        "border": "#D1D5DB",
        "muted": "#7B8794",
        "highlight": "#E5E7EB",
        "agent_reactive": "#059669",
        "agent_deliberative": "#2563EB",
        "agent_metacognitive": "#7C3AED",
        "thought_color": "#D97706",
        "action_color": "#059669",
        "observation_color": "#2563EB"
      },
      "syntax_theme": "solarized-light",
      "panel_style": {
        "border_style": "rounded",
        "box": "ROUNDED",
        "padding": [1, 2, 1, 2],
        "title_align": "left"
      }
    }
  }
}
